<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.sim.tunisierando.LoginActivity">


    <LinearLayout
        android:background="#ccd4c6c6"
        android:layout_width="340dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S'Authentifier"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/EditTextFloatLabel">

            <EditText

                android:id="@+id/ed_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_line_thikness"
                android:drawableStart="@drawable/icons8_admin"
                android:drawableTint="@color/grey_600"
                android:hint="@string/login"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="#fff"
                android:textColorHint="@color/grey_200"
                android:textCursorDrawable="@drawable/cursor_color_editext"
                android:drawableLeft="@drawable/icons8_admin" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/EditTextFloatLabel">

            <EditText
                android:id="@+id/ed_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_line_thikness"
                android:drawableStart="@drawable/icons8_lock"
                android:drawableTint="@color/grey_600"
                android:hint="Mot de passe "
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/grey_200"
                android:textColorHint="@color/grey_200"
                android:textCursorDrawable="@drawable/cursor_color_editext"
                android:drawableLeft="@drawable/icons8_lock" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnSignIn"
            android:text="Se connecter"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_signup_style"
            android:alpha="0.75"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/tt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Mot de passe oublié ?"
                android:textColor="@color/grey_200"
                android:textSize="18sp" />

            <Button
                android:layout_below="@+id/tt1"
                android:id="@+id/btnGoToRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="Créer votre compte "
                android:layout_margin="10dp"
                android:textColor="@color/grey_200" />

        </RelativeLayout>


    </LinearLayout>





</RelativeLayout>
