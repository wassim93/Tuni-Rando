<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.sim.tunisierando.ReActivateActivity">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activation du compte"
        android:layout_marginTop="100dp"
        android:textSize="36dp"
        android:textAlignment="center"/>
    <android.support.v7.widget.CardView
        android:layout_below="@+id/title"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="#cccfc9c9"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="11dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp"
        android:layout_height="350dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:paddingTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"

                android:hint="Votre email  ... "
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="left"/>

            <Button
                android:id="@+id/send"
                android:layout_width="222dp"
                android:layout_height="50dp"
                android:layout_below="@+id/addimage"
                android:layout_centerInParent="true"
                android:text="M'envoyer un code par mail "
                android:textColor="#fff"
                android:background="#62ba4e"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
