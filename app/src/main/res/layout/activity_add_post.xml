<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.sim.tunisierando.AddPostActivity">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter une publication"
        android:layout_marginTop="100dp"
        android:textSize="36dp"
        android:textAlignment="center"/>
    <android.support.v7.widget.CardView
        android:layout_below="@+id/title"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="#cccfc9c9"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="11dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp"
        android:layout_height="400dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="6"
                android:lines="6"
                android:hint="ecrire quelque chose ... "
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="left"/>
            <Button
                android:id="@+id/addimage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="70dp"
                android:background="@drawable/ic_menu_gallery"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajouter image"
                android:textSize="18dp"
                android:layout_marginTop="213dp"
                android:layout_marginLeft="135dp"
                />
            <Button
                android:id="@+id/poster"
                android:layout_width="222dp"
                android:layout_height="50dp"
                android:layout_below="@+id/addimage"
                android:layout_centerInParent="true"
                android:text="Poster .. "
                android:textColor="#fff"
                android:background="#62ba4e"
                />
        </RelativeLayout>

        </android.support.v7.widget.CardView>
</RelativeLayout>
