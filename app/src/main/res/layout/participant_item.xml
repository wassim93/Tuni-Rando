<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="150dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/green100"
    android:layout_height="180dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btn_show_profile"
            android:src="@drawable/icons8_eye_48"
            android:layout_width="15dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_height="15dp"
            android:layout_alignParentRight="true" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/participant_profile_pic"
            android:src="@drawable/rando"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="80dp"
            android:layout_marginTop="10dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/participant_name"
            android:text="participant"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/participant_profile_pic"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v7.widget.CardView>