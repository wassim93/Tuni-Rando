<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.sim.tunisierando.UpdateProfileActivity">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ParamÃ©tres de votre Compte "
        android:layout_marginTop="100dp"
        android:textSize="36dp"
        android:textAlignment="center"/>
    <android.support.v7.widget.CardView
        android:layout_below="@+id/title"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="#cccfc9c9"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="11dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp"
        android:layout_height="400dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:id="@+id/form"

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Votre nom "
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="left"/>
            <EditText
                android:layout_below="@+id/nom"
                android:id="@+id/prenom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Votre prenom "
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="left"/>
            <EditText
                android:layout_below="@+id/prenom"
                android:id="@+id/phonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Votre numero de telephone "
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="left"/>
            <EditText
                android:layout_below="@+id/phonenumber"
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Votre adresse  "
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="left"/>
            <Button
                android:layout_below="@+id/address"
                android:id="@+id/terminer"
                android:layout_width="222dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:text=" Terminer  "
                android:textColor="#fff"
                android:background="#62ba4e"
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>
