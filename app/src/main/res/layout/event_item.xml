<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    app:cardCornerRadius="2dp"
    android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ev_userpic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@mipmap/ic_launcher_round"/>

        <TextView
            android:id="@+id/ev_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/ev_userpic"
            android:layout_toEndOf="@id/ev_userpic"
            android:text="user name here "
            android:textSize="18sp"
            android:textColor="#494848"
            android:textStyle="bold" />
        <Button
            android:id="@+id/ev_btn_more"
            android:background="@drawable/icons8_more_24"
            android:layout_width="30dp"
            android:gravity="end"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            android:layout_centerInParent="true"
            android:layout_height="30dp" />

    </RelativeLayout>

    <com.robohorse.pagerbullet.PagerBullet
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:panelHeightInDp="40dp" />

    <TextView
        android:id="@+id/ev_title"
        android:text="Randonne Ã  bizerte"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ev_date"
        android:text="Sunday 18-11-2017"
        android:layout_margin="10dp"
        android:drawableStart="@drawable/icons8_calendar"
        android:textSize="20sp"
        android:textColor="@color/google_focus_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icons8_calendar" />

</LinearLayout>
</android.support.v7.widget.CardView>